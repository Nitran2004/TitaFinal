@model ProyectoIdentity.Models.RecomendacionAlergenosViewModel
@{
    ViewData["Title"] = "Recomendaciones Personalizadas";
}

<style>
    .recomendaciones-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .header-section {
        background: linear-gradient(135deg, #00b894, #00cec9);
        color: white;
        padding: 30px;
        border-radius: 15px;
        text-align: center;
        margin-bottom: 30px;
        box-shadow: 0 8px 25px rgba(0, 184, 148, 0.3);
    }

    .user-info {
        background: linear-gradient(135deg, #e17055, #fd79a8);
        color: white;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 25px;
        text-align: center;
    }

    .alergenos-usuario {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 15px;
    }

    .alergeno-badge {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .mensaje-recomendacion {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        padding: 20px;
        border-radius: 10px;
        border-left: 4px solid #00b894;
        margin-bottom: 25px;
        font-size: 1.1rem;
        color: #2d3436;
    }

    .productos-section {
        margin-bottom: 30px;
    }

    .section-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
        padding: 15px 20px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 1.3rem;
    }

    .recomendados-header {
        background: linear-gradient(135deg, #d4edda, #c3e6cb);
        color: #155724;
        border-left: 4px solid #28a745;
    }

    .no-recomendados-header {
        background: linear-gradient(135deg, #f8d7da, #f5c6cb);
        color: #721c24;
        border-left: 4px solid #dc3545;
    }

    .productos-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
    }

    .producto-card {
        background: white;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        border: 1px solid #e9ecef;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .producto-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    }

    .producto-recomendado {
        border-left: 4px solid #28a745;
    }

    .producto-recomendado::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 0;
        height: 0;
        border-left: 30px solid transparent;
        border-top: 30px solid #28a745;
    }

    .producto-recomendado::after {
        content: '✓';
        position: absolute;
        top: 8px;
        right: 8px;
        color: white;
        font-weight: bold;
        font-size: 0.8rem;
    }

    .producto-no-recomendado {
        border-left: 4px solid #dc3545;
        opacity: 0.8;
    }

    .producto-no-recomendado::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 0;
        height: 0;
        border-left: 30px solid transparent;
        border-top: 30px solid #dc3545;
    }

    .producto-no-recomendado::after {
        content: '⚠';
        position: absolute;
        top: 8px;
        right: 8px;
        color: white;
        font-weight: bold;
        font-size: 0.8rem;
    }

    .producto-nombre {
        font-size: 1.2rem;
        font-weight: 600;
        color: #2d3436;
        margin-bottom: 10px;
        padding-right: 40px;
    }

    .producto-categoria {
        background: #6c5ce7;
        color: white;
        padding: 4px 12px;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 500;
        display: inline-block;
        margin-bottom: 10px;
    }

    .producto-precio {
        font-size: 1.3rem;
        font-weight: 700;
        color: #00b894;
        margin-bottom: 10px;
    }

    .producto-descripcion {
        color: #636e72;
        font-size: 0.9rem;
        line-height: 1.4;
        margin-bottom: 15px;
    }

    .producto-alergenos {
        background: #fff5f5;
        color: #e74c3c;
        padding: 8px 12px;
        border-radius: 8px;
        font-size: 0.8rem;
        margin-top: 10px;
        border-left: 3px solid #e74c3c;
    }

    .producto-ingredientes {
        background: #f8f9fa;
        padding: 8px 12px;
        border-radius: 8px;
        font-size: 0.8rem;
        margin-top: 10px;
        color: #6c757d;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: white;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        border: 1px solid #e9ecef;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 5px;
    }

    .stat-recomendados {
        color: #28a745;
    }

    .stat-no-recomendados {
        color: #dc3545;
    }

    .stat-total {
        color: #6c5ce7;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #6c757d;
    }

    .empty-state i {
        font-size: 4rem;
        margin-bottom: 20px;
        opacity: 0.5;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
        flex-wrap: wrap;
    }

    .btn-primary {
        background: linear-gradient(135deg, #00b894, #00a085);
        border: none;
        padding: 12px 30px;
        border-radius: 25px;
        color: white;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 184, 148, 0.4);
        color: white;
        text-decoration: none;
    }

    .btn-secondary {
        background: white;
        border: 2px solid #6c5ce7;
        color: #6c5ce7;
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-secondary:hover {
        background: #6c5ce7;
        color: white;
        transform: translateY(-2px);
        text-decoration: none;
    }

    @@media (max-width: 768px) {
        .recomendaciones-container {
            padding: 10px;
        }
        
        .productos-grid {
            grid-template-columns: 1fr;
        }
        
        .stats-grid {
            grid-template-columns: 1fr;
        }
        
        .action-buttons {
            flex-direction: column;
            align-items: center;
        }
        
        .btn-primary, .btn-secondary {
            width: 100%;
            max-width: 300px;
            justify-content: center;
        }
    }
</style>

<div class="recomendaciones-container">
    <div class="header-section">
        <h1><i class="fas fa-magic"></i> Recomendaciones Personalizadas</h1>
        <p>Productos seguros basados en tus alérgenos registrados</p>
    </div>

    <!-- Información del usuario -->
    <div class="user-info">
        <h3><i class="fas fa-user"></i> Hola, @Model.NombreUsuario</h3>
        @if (Model.AlergenosUsuario.Any())
        {
            <p>Tus alérgenos registrados:</p>
            <div class="alergenos-usuario">
                @foreach (var alergeno in Model.AlergenosUsuario)
                {
                    <span class="alergeno-badge">
                        <i class="fas fa-exclamation-triangle"></i> @alergeno
                    </span>
                }
            </div>
        }
        else
        {
            <p><i class="fas fa-smile"></i> No tienes alérgenos registrados - ¡Puedes disfrutar de todo!</p>
        }
    </div>

    <!-- Mensaje de recomendación -->
    <div class="mensaje-recomendacion">
        <i class="fas fa-lightbulb"></i> @Model.MensajeRecomendacion
    </div>

    <!-- Estadísticas -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-number stat-recomendados">@Model.ProductosRecomendados.Count</div>
            <div>Productos Seguros</div>
        </div>
        <div class="stat-card">
            <div class="stat-number stat-no-recomendados">@Model.ProductosNoRecomendados.Count</div>
            <div>Productos a Evitar</div>
        </div>
        <div class="stat-card">
            <div class="stat-number stat-total">@Model.TotalProductosAnalizados</div>
            <div>Total Analizados</div>
        </div>
    </div>

    <!-- Productos recomendados -->
    @if (Model.ProductosRecomendados.Any())
    {
        <div class="productos-section">
            <div class="section-header recomendados-header">
                <i class="fas fa-check-circle"></i>
                <span>Productos Seguros para Ti (@Model.ProductosRecomendados.Count)</span>
            </div>
            
            <div class="productos-grid">
                @foreach (var producto in Model.ProductosRecomendados)
                {
                    <div class="producto-card producto-recomendado">
                        <div class="producto-categoria">@producto.Categoria</div>
                        <div class="producto-nombre">@producto.Nombre</div>
                        <div class="producto-precio">$@producto.Precio.ToString("F0")</div>
                        
                        @if (!string.IsNullOrEmpty(producto.Descripcion))
                        {
                            <div class="producto-descripcion">@producto.Descripcion</div>
                        }
                        
                        @if (!string.IsNullOrEmpty(producto.Ingredientes) && producto.Ingredientes != "NULL")
                        {
                            <div class="producto-ingredientes">
                                <strong>Ingredientes:</strong> @producto.Ingredientes
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(producto.Alergenos) && producto.Alergenos != "NULL")
                        {
                            <div class="producto-alergenos">
                                <strong>Alérgenos:</strong> @producto.Alergenos
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }

    <!-- Productos no recomendados -->
    @if (Model.ProductosNoRecomendados.Any())
    {
        <div class="productos-section">
            <div class="section-header no-recomendados-header">
                <i class="fas fa-exclamation-triangle"></i>
                <span>Productos a Evitar (@Model.ProductosNoRecomendados.Count)</span>
            </div>
            
            <div class="productos-grid">
                @foreach (var producto in Model.ProductosNoRecomendados)
                {
                    <div class="producto-card producto-no-recomendado">
                        <div class="producto-categoria">@producto.Categoria</div>
                        <div class="producto-nombre">@producto.Nombre</div>
                        <div class="producto-precio">$@producto.Precio.ToString("F0")</div>
                        
                        @if (!string.IsNullOrEmpty(producto.Descripcion))
                        {
                            <div class="producto-descripcion">@producto.Descripcion</div>
                        }
                        
                        @if (!string.IsNullOrEmpty(producto.Ingredientes) && producto.Ingredientes != "NULL")
                        {
                            <div class="producto-ingredientes">
                                <strong>Ingredientes:</strong> @producto.Ingredientes
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(producto.Alergenos) && producto.Alergenos != "NULL")
                        {
                            <div class="producto-alergenos">
                                <strong>⚠️ Contiene alérgenos:</strong> @producto.Alergenos
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }

    <!-- Estado vacío si no hay productos -->
    @if (!Model.ProductosRecomendados.Any() && !Model.ProductosNoRecomendados.Any())
    {
        <div class="empty-state">
            <i class="fas fa-search"></i>
            <h3>No se encontraron productos</h3>
            <p>No hay productos disponibles en este momento para analizar.</p>
        </div>
    }

    <!-- Botones de acción -->
    <div class="action-buttons">
        <a href="@Url.Action("Gestion", "Alergenos")" class="btn-primary">
            <i class="fas fa-edit"></i> Gestionar Alérgenos
        </a>
        
        <a href="@Url.Action("Chat", "Home")" class="btn-secondary">
            <i class="fas fa-comments"></i> Chat de Recomendaciones
        </a>
        
        <a href="@Url.Action("Index", "Home")" class="btn-secondary">
            <i class="fas fa-home"></i> Volver al Inicio
        </a>
    </div>
</div>