@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Enlace a Mis Puntos -->
        @if (User.IsInRole("Administrador") || User.IsInRole("Registrado"))
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Fidelizacion" asp-action="MisPuntos">
                    <i class="fas fa-coins me-1"></i> Mis Puntos
                </a>
            </li>
        }

        <!-- Indicador de Rol - Entre Mis Puntos y Mi Cuenta -->
        @if (User.IsInRole("Administrador"))
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Cuentas" asp-action="RegistroAdministrador">
                    <strong>Tu rol es Administrador → Registro Administrador</strong>
                </a>
            </li>
        }
        else if (User.IsInRole("Cajero"))
        {
            <li class="nav-item">
                <span class="nav-link text-white">
                    <strong>Tu rol es: Cajero</strong>
                </span>
            </li>
        }
        else
        {
            <li class="nav-item">
                <span class="nav-link text-white">
                    <strong>Tu rol es: Registrado</strong>
                </span>
            </li>
        }

        <!-- Dropdown Mi Cuenta -->
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button"
               data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user me-1"></i> Mi cuenta
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li>
                    <span class="dropdown-item-text">
                        <i class="fas fa-user-circle me-2"></i>
                        Hola, @UserManager.GetUserName(User)
                    </span>
                </li>
                <!-- Mostrar puntos aquí -->
                <li>
                    <div class="dropdown-item-text bg-success text-white text-center" style="border-radius: 5px; margin: 5px;">
                        <i class="fas fa-coins"></i> <span id="puntos-usuario">--- pts</span>
                    </div>
                </li>
                <li>
                    <hr class="dropdown-divider">
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Fidelizacion" asp-action="MisPuntos">
                        <i class="fas fa-star text-warning"></i> Ver Mis Puntos
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Fidelizacion" asp-action="Recompensas">
                        <i class="fas fa-gift text-info"></i> Mis Recompensas
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Fidelizacion" asp-action="Historial">
                        <i class="fas fa-history text-secondary"></i> Historial Completo
                    </a>
                </li>

                <!-- Sección de Acciones Rápidas -->
                <li>
                    <hr class="dropdown-divider">
                </li>
                <li>
                    <h6 class="dropdown-header">
                        <i class="fas fa-bolt text-primary"></i> Acciones Rápidas
                    </h6>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Pedidos" asp-action="VerPedidoTemporal">
                        <i class="fas fa-shopping-bag text-success"></i> Ver Mi Pedido
                    </a>
                </li>

                <!-- Gestión de Canjes solo para Administradores -->
                @if (User.IsInRole("Administrador"))
                {
                    <li>
                        <a class="dropdown-item" asp-controller="Fidelizacion" asp-action="AdminCanjesIndex">
                            <i class="fas fa-users-cog text-purple"></i> Gestión de Canjes
                        </a>
                    </li>
                }

                <li>
                    <hr class="dropdown-divider">
                </li>
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Usuarios" asp-action="EditarPerfil"
                       asp-route-id="@UserManager.GetUserId(User)">
                        <i class="fas fa-edit text-primary"></i> Editar Perfil
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Usuarios" asp-action="CambiarPassword">
                        <i class="fas fa-lock text-danger"></i> Cambiar Contraseña
                    </a>
                </li>
            </ul>
        </li>

        <!-- Botón Salir -->
        <li class="nav-item">
            <form id="logoutForm" method="post" class="d-inline" asp-controller="Cuentas" asp-action="SalirAplicacion">
                <button type="submit" class="btn btn-outline-light">
                    <i class="fas fa-sign-out-alt me-1"></i> SALIR
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Cuentas" asp-action="Registro">
                <i class="fas fa-user-plus me-1"></i> Registro
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Cuentas" asp-action="Acceso">
                <i class="fas fa-sign-in-alt me-1"></i> Iniciar Sesión
            </a>
        </li>
    }
</ul>

@if (SignInManager.IsSignedIn(User))
{
    <script>
        // Cargar puntos del usuario al inicializar
        document.addEventListener('DOMContentLoaded', function () {
            fetch('@Url.Action("ObtenerPuntos", "Fidelizacion")')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('puntos-usuario').textContent = data.puntos + ' pts';
                })
                .catch(error => {
                    document.getElementById('puntos-usuario').textContent = '0 pts';
                });
        });
    </script>
}