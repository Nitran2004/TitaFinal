@model ProyectoIdentity.Models.Entre3

@{
    ViewData["Title"] = "Create";
}

<hr />
<style>
    #container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .img-container {
        flex: 1 1 300px;
        max-width: 45%;
        box-sizing: border-box;
    }

    .img-fluid {
        width: 91%;
        height: auto;
        display: block;
    }

    #right-side {
        width: 100%;
        margin-top: 30px;
        display: flex;
        justify-content: center;
    }

        #right-side p {
            font-size: 2em;
            text-align: center;
            max-width: 80%;
        }

    .btn-info {
        color: #fff;
        background-color: #17a2b8;
        border-color: #17a2b8;
        border-radius: 25px;
        padding: 20px 40px;
        font-size: 22px;
        transition: all 0.5s;
        margin-top: 30px;
    }

        .btn-info:hover {
            background-color: #138496;
            border-color: #138496;
        }

    .text-center {
        text-align: center;
    }

    form {
        display: flex;
        justify-content: flex-end; /* Alinea el botón a la derecha */
        margin-top: 20px;
    }
</style>

<div id="container">
    <div class="img-container">
        <img src="~/images/corta2.jpeg" alt="Imagen de dinosaurio" class="img-fluid" />
    </div>
    <div class="img-container">
        <img src="~/images/corta1.jpeg" alt="Imagen de dinosaurio" class="img-fluid" />
    </div>
</div>

<div id="right-side">
    <p>
        Vuelve a intentarlo, ya que se corto la cuerda.
    </p>
</div>

<div>
    <form method="post">
        <button class="btn btn-info" type="submit" name="accion" value="Página siguiente">Página siguiente</button>
    </form>
</div>
