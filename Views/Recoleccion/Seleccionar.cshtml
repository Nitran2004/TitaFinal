    <style>
        .btn-warning {
            color: #fff;
            background-color: #F2A900;
            border-color: #F2A900;
        }

            .btn-warning:hover {
                color: #fff;
                background-color: #e09600;
                border-color: #d48e00;
            }
    </style>
}