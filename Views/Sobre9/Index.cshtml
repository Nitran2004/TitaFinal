@model IEnumerable<ProyectoIdentity.Models.Sobre9>

@{
    ViewData["Title"] = "Index";
}

<hr />
<style>
    #container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .img-container {
        flex: 1 1 300px;
        max-width: 45%;
        box-sizing: border-box;
    }

    .img-fluid {
        width: 91%;
        height: auto;
        display: block;
        border: 1px solid #333; /* Añade un borde sólido de 5px de grosor y color gris oscuro */
    }

    #right-side p {
        font-size: 2em;
        text-align: justify;
    }

    .btn-info {
        color: #fff;
        background-color: #17a2b8;
        border-color: #17a2b8;
        border-radius: 25px;
        padding: 20px 40px;
        font-size: 22px;
        transition: all 0.5s;
        margin-top: 30px;
    }

        .btn-info:hover {
            background-color: #138496;
            border-color: #138496;
        }

    .text-center {
        text-align: center;
    }

    /* Contenedor para alinear el audio y el botón */
    #button-audio-container {
        display: flex;
        justify-content: space-between; /* Alinea el audio a la izquierda y el botón a la derecha */
        align-items: center;
        margin-top: 30px;
    }

    /* Audio a la izquierda */
    .audio-container {
        flex: 1;
    }

    /* Botón a la derecha */
    #button-container {
        flex: 1;
        text-align: right; /* Alinea el botón a la derecha */
    }

</style>

<div id="container">
    <div class="img-container">
        <img src="~/images/civi.jpeg" alt="Imagen de dinosaurio" class="img-fluid" />
    </div>
    <div class="img-container">
        <img src="~/images/humo.jpeg" alt="Imagen de dinosaurio" class="img-fluid" />
    </div>
</div>

<div id="right-side" class="text-center">
    <p>
        Perdemos al lobo y encontramos la civilización. Prendemos una señal de humo para el punto de extracción.

    </p>
</div>

<div id="button-audio-container">
    <!-- Audio a la izquierda -->
    <div class="audio-container">
        <audio controls>
            <source src="~/Canciones/Cheering.wav" type="audio/wav">
            Tu navegador no soporta el elemento de audio.
        </audio>
    </div>

    <!-- Botón a la derecha -->
    <div id="button-container">
        <form method="post">
            <button class="btn btn-info" type="submit" name="accion" value="Página siguiente">Regresar al menú</button>
        </form>
    </div>
</div>
