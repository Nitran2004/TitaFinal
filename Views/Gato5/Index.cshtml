@model IEnumerable<ProyectoIdentity.Models.Gato5>

@{
    ViewData["Title"] = "Index";
}

<hr />
<style>
    #container {
        display: flex;
        justify-content: space-around;
        align-items: center;
        gap: 20px;
    }

    .text-center {
        text-align: center;
    }

    .img-fluid {
        max-width: 100%;
        height: auto;
    }

    .btn {
        color: #fff;
        background-color: #17a2b8;
        border-color: #17a2b8;
        border-radius: 25px; /* Añade bordes redondeados */
        padding: 15px 30px; /* Aumenta el padding para un mejor aspecto */
        font-size: 22px; /* Ajusta el tamaño de la fuente */
        transition: all 0.5s; /* Añade una transición suave */
        text-decoration: none;
        margin-top: 10px;
    }

        .btn:hover {
            background-color: #138496; /* Cambia el color de fondo al pasar el mouse */
            border-color: #138496; /* Cambia el color del borde al pasar el mouse */
        }

    #center p {
        font-size: 2.5em;
        color: #333;
        line-height: 1.6;
    }
</style>


<div id="container" style="display: flex; justify-content: center;">
    <div class="img-container" style="margin-right: 20px;">
        <img src="~/images/atrapa.jpeg" alt="Imagen de dinosaurio" class="img-fluid" style="max-width: 550px;" />
    </div>
    <div class="img-container" style="margin-right: 20px;">
        <img src="~/images/persigue.jpeg" alt="Imagen de dinosaurio" class="img-fluid" style="max-width: 550px;" />
    </div>
</div>

<div id="container">
    <div id="center" class="text-center">
        <p>

            Atrapar al guardia perro o perseguirlo para obtener las llaves del cuarto?
        </p>
    </div>
</div>

<div id="container" style="justify-content: space-around;">
    <div id="left-side" class="text-center">
        <a class="btn" asp-action="Create" asp-controller="Gato6">Perseguirlo</a>
    </div>
    <div id="center" class="text-center">
    </div>
    <div id="right-side" class="text-center">
        <a class="btn" asp-action="Create" asp-controller="Gato6">Agarrar</a>
    </div>
</div>
