    // Opcional: Confetti celebration effect
    document.addEventListener('DOMContentLoaded', function() {
        // Aquí podrías agregar efectos de confetti usando una librería como canvas-confetti
        console.log('¡Canje exitoso! 🎉');
    });
</script>