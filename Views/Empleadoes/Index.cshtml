@model IEnumerable<ProyectoIdentity.Models.Empleado>

@{
    ViewData["Title"] = "Empleados";
}

<h1>Empleados</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Crear Nuevo Empleado</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                Productividad Promedio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @if (item.Tareas != null && item.Tareas.Any())
                    {
                        <strong>
                            @item.Tareas.Where(t => t.EstadoProgreso == "Completada").Average(t => t.Productividad ?? 0) %
                        </strong>
                    }
                    else
                    {
                        <span>No disponible</span>
                    }
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a> |
                    <a class="btn btn-warning btn-sm" asp-action="CalcularProductividadEmpleado" asp-route-empleadoId="@item.Id">Calcular Productividad</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.ProductividadPromedio != null)
{
    <div class="alert alert-info">
        <strong>Productividad Promedio: </strong> @ViewBag.ProductividadPromedio %
    </div>
}
