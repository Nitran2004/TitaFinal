@model ProyectoIdentity.Controllers.PedidoRecomendacionController.Pedido
@{
    ViewBag.Title = "Confirmación de Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card mt-4">
                <div class="card-header bg-success text-white text-center">
                    <h3><i class="fas fa-check-circle"></i> ¡Pedido Confirmado!</h3>
                    <p class="mb-0">Tu pedido ha sido recibido exitosamente</p>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Información del Pedido</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Número de Pedido:</strong></td>
                                    <td>#@Model.Id.ToString("D6")</td>
                                </tr>
                                <tr>
                                    <td><strong>Fecha:</strong></td>
                                    <td>@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <td><strong>Estado:</strong></td>
                                    <td><span class="badge bg-warning">@Model.Estado</span></td>
                                </tr>
                                <tr>
                                    <td><strong>Total:</strong></td>
                                    <td class="h5 text-success">$@Model.Total</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Datos de Entrega</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Cliente:</strong></td>
                                    <td>@Model.ClienteNombre</td>
                                </tr>
                                <tr>
                                    <td><strong>Teléfono:</strong></td>
                                    <td>@Model.ClienteTelefono</td>
                                </tr>
                                <tr>
                                    <td><strong>Dirección:</strong></td>
                                    <td>@Model.Direccion</td>
                                </tr>
                                @if (!string.IsNullOrEmpty(Model.Observaciones))
                                {
                                    <tr>
                                        <td><strong>Observaciones:</strong></td>
                                        <td>@Model.Observaciones</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                    
                    <h5>Detalle de Productos</h5>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Precio Unit.</th>
                                    <th>Cantidad</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.Nombre</td>
                                        <td>$@item.Precio</td>
                                        <td>@item.Cantidad</td>
                                        <td>$@item.Subtotal</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-success">
                                    <th colspan="3">Total a Pagar:</th>
                                    <th>$@Model.Total</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    
                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle"></i> Información Importante:</h6>
                        <ul class="mb-0">
                            <li>Tiempo estimado de entrega: 30-45 minutos</li>
                            <li>Recibirás una llamada de confirmación en breve</li>
                            <li>Métodos de pago disponibles: Efectivo, transferencia</li>
                        </ul>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <div class="d-flex justify-content-center gap-3">
                        <a href="@Url.Action("Recomendacion", "MenuRecomendacion")" class="btn btn-warning">
                            <i class="fas fa-utensils"></i> Hacer Nuevo Pedido
                        </a>
                        <a href="@Url.Action("ListarPedidos", "PedidoRecomendacion")" class="btn btn-outline-secondary">
                            <i class="fas fa-list"></i> Ver Mis Pedidos
                        </a>
                        <button onclick="window.print()" class="btn btn-outline-primary">
                            <i class="fas fa-print"></i> Imprimir
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section styles {
<style>
    .btn-warning {
        color: #fff;
        background-color: #F2A900;
        border-color: #F2A900;
    }

    .btn-warning:hover {
        color: #fff;
        background-color: #e09600;
        border-color: #d48e00;
    }

    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    
    .table-borderless td {
        border: none;
        padding: 0.25rem 0;
    }
    
    .gap-3 {
        gap: 1rem !important;
    }
    
    @@media print {
        .card-footer {
            display: none !important;
        }
    }
</style>
}