@model IEnumerable<ProyectoIdentity.Models.Tarea>

@{
    ViewData["Title"] = "Productividad de Tareas";
}

<h1>Productividad de Tareas</h1>

<p>
    <a class="btn btn-primary" asp-action="Index">Volver a Tareas</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Nombre del Empleado
            </th>
            <th>Tarea</th>
            <th>
                Prioridad
            </th>
            <th>
                Tiempo Estimado
            </th>
            <th>
                Tiempo Utilizado
            </th>
            <th>
                Productividad Calculada
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Empleado != null)
                    {
                        @item.Empleado.Name @item.Empleado.LastName
                    }
                    else
                    {
                        <span>No disponible</span>
                    }
                </td>
                <td>@item.Nombredelatarea</td>

                <td>
                    @item.Prioridad
                </td>
                <td>
                    @item.TiempoEstimado
                </td>
                <td>
                    @item.TiempoUtilizado
                </td>
                <td>
                    @if (item.TiempoEstimado > 0 && item.TiempoUtilizado > 0)
                    {
                        // Calcular el porcentaje de productividad
                        var productividad = (double)item.TiempoEstimado / item.TiempoUtilizado * 100;
                        <strong>@String.Format("{0:F2} %", productividad)</strong>
                    }
                    else
                    {
                        <span>No disponible</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index" class="btn btn-primary">Regresar</a>
