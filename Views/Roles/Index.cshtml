@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Administracion de roles";

}

<h1 class="text-center">Administracion de roles</h1>

<div class=" row">
    <div class="col-sm-12">
        <div class="card border"></div>
        <div class="card-header"></div>
        <h3><strong>Lista de roles</strong></h3>
    </div>
    <div class="card body">
        <div class="table-responsive">
            @if(Model.Count()>0){
                <table class ="d-lg-table table-bordered" id="tablaRoles" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Acciones</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <th>@Html.DisplayFor(m=>item.Id)</th>
                                <th>Nombre</th>
                                <th>Acciones</th>

                            </tr>
                        }
                    </tbody>
                </table>
                
            }
        </div>
    </div>
</div>