@model ProyectoIdentity.Models.Mito

@{
    ViewData["Title"] = "Create";
}

<hr />

<style>
    #container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        margin-top: 30px;
        padding: 10px;
    }

    #left-side {
        flex: 1 1 100%;
        max-width: 40%;
        margin-bottom: 20px;
    }

    #right-side {
        flex: 1 1 100%;
        max-width: 55%;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        #right-side p {
            font-size: 2em; /* Mantener el tamaño de texto en 2em */
            text-align: justify;
            margin-bottom: 40px;
        }

    img {
        max-width: 100%;
        height: auto;
    }

    .btn-info {
        color: #fff;
        background-color: #17a2b8;
        border-color: #17a2b8;
        border-radius: 25px;
        padding: 20px 40px;
        font-size: 22px;
        transition: all 0.5s;
    }

        .btn-info:hover {
            background-color: #138496;
            border-color: #138496;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        border-radius: 50%;
        padding: 15px 20px;
        font-size: 24px;
        width: 70px;
        height: 70px;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    #button-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        margin-top: 10px;
    }

        #button-container audio {
            margin-bottom: 10px; /* Espacio entre el audio y el botón */
        }

        #button-container form {
            flex: 1 1 auto;
            max-width: 100%;
            margin-top: 10px;
        }

    .audio-container {
        margin-top: 20px;
        width: 100%;
        max-width: 300px; /* Limitar el ancho máximo del contenedor de audio */
    }

    audio {
        width: 100%; /* Asegurar que el audio sea responsivo */
    }
</style>

<div id="container">
    <div id="left-side">
        <h1>Misión Peligrosa</h1>
        <img src="~/images/port9.jpeg" alt="Descripción de la imagen" />
    </div>
    <div id="right-side">
        <p>
            Antonio baja a tierras salvajes de Europa cerca de las ruinas de un pueblo minero embrujado, pero te necesita urgente.
        </p>
        <div id="button-container">
            <div class="audio-container">
                <!-- Elemento de audio -->
                <audio controls>
                    <source src="~/Canciones/Ejemplo17.wav" type="audio/wav">
                    Tu navegador no soporta el elemento de audio.
                </audio>
            </div>
            <div>
                <form method="post" asp-action="Index">
                    <button class="btn btn-info" type="submit" name="accion" value="Página siguiente">Página siguiente</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div style="margin-top: 20px;">
    <a asp-controller="Books" asp-action="Index">Regresar a Libros</a>
</div>
